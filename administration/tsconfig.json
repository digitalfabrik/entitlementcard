{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "module": "ES2022",
    // modules
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    // types
    "types": ["vite/client"],
    // Language and Environment
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx"
  },
  "include": [
    "@types",
    "src",
    "scripts",
    "config",
    "jest.config.ts",
    "jest.setup.ts",
    ".eslintrc.js",
    "vite.config*.ts"
  ]
}
