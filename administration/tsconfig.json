{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "es2020",
    "sourceMap": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["node", "jest"]
  },
  "include": [
    "@types",
    "src",
    "scripts",
    "config",
    "jest.config.ts",
    "jest.setup.ts",
    ".eslintrc.js"
  ],
  "references": [
    {
      "path": "../frontend/build-configs"
    }
  ]
}
